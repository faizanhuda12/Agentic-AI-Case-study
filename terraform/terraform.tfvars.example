# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

project_id = "your-gcp-project-id"
region     = "us-central1"

# Cloud Run API Configuration
api_service_name = "fedex-api"
api_image        = "gcr.io/your-gcp-project-id/fedex-api:latest"
api_cpu          = "1"
api_memory        = "512Mi"
api_min_instances = 0
api_max_instances = 10

# Frontend Configuration
frontend_bucket_name = null  # Will be auto-generated if null
enable_frontend_cdn  = true

# Vector Search Configuration
index_name    = "fedex-sops-index"
endpoint_name = "fedex-sops-endpoint"

# Embedding dimensions (768 for text-embedding-004 model)
embedding_dimensions = 768

# Vector search configuration
approximate_neighbors_count = 10
distance_measure_type       = "DOT_PRODUCT_DISTANCE"
index_update_method         = "BATCH_UPDATE"

# Network configuration (optional - leave as null for public endpoint)
network = null
enable_public_endpoint = true

